@inherits LayoutComponentBase
@using Syncfusion.Blazor.Navigations
@using AutoDealerSphere.Client.Shared

<div class="layout-container">
    <div class="sidebar">
        <div class="logo">
            <h1 class="heading10" data-en="AutoDealerSphere"><span>Blazor Customer Relation Management System</span></h1>
        </div>
        <SfMenu Items="MenuItems">
            <MenuFieldSettings Text="Text" Url="Url" IconCss="IconCss"></MenuFieldSettings>
        </SfMenu>
    </div>
    <div class="main-content">
        @Body
    </div>
</div>

@code {
    private List<AutoDealerSphere.Client.Shared.MenuItems> MenuItems = new()
    {
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "ダッシュボード",
            Url = "/",
            IconCss = "e-icons e-home"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "顧客管理",
            Url = "/clientlist",
            IconCss = "e-icons e-user"
        }
    };
}

<style>
.layout-container {
    display: flex;
    height: 100vh;
}

.sidebar {
    width: 250px;
    background-color: #f5f5f5;
    padding: 20px;
    border-right: 1px solid #ddd;
}

.logo {
    padding: 20px 0;
    border-bottom: 1px solid #ddd;
}

.main-content {
    flex: 1;
    padding: 20px;
}

.heading10 {
    margin: 0;
    font-size: 1.5em;
}
</style>