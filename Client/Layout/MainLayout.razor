@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@using Syncfusion.Blazor.Navigations
@using AutoDealerSphere.Client.Shared

<div class="layout-container">
    <div class="header">
        <h1 class="heading10" data-en="AutoDealerSphere"><span>自動車販売管理システム</span></h1>
    </div>
    <div class="main-container">
        @if (!IsLoginPage())
        {
            <div class="sidebar">
                <SfMenu Items="MenuItems" Orientation="Orientation.Vertical">
                    <MenuFieldSettings Text="Text" Url="Url" IconCss="IconCss"></MenuFieldSettings>
                </SfMenu>
            </div>
        }
        <div class="main-content @(IsLoginPage() ? "full-width" : "")">
            @Body
        </div>
    </div>
</div>

@code {
    private bool IsLoginPage()
    {
        var uri = NavigationManager.Uri;
        return uri.EndsWith("/") || uri.EndsWith("/index");
    }

    private List<AutoDealerSphere.Client.Shared.MenuItems> MenuItems = new()
    {
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "顧客管理",
            Url = "/clientlist",
            IconCss = "e-icons e-people"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "車両管理",
            Url = "/vehiclelist",
            IconCss = "e-icons e-grid-view"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "車両データインポート",
            Url = "/vehicle-import",
            IconCss = "e-icons e-arrow-up"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "部品管理",
            Url = "/partlist",
            IconCss = "e-icons e-settings"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "請求書管理",
            Url = "/invoicelist",
            IconCss = "e-icons e-file-document"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "ユーザー管理",
            Url = "/userlist",
            IconCss = "e-icons e-user"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "発行者情報管理",
            Url = "/issuerinfo",
            IconCss = "e-icons e-circle-info"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "ログアウト",
            Url = "/",
            IconCss = "e-icons e-close"
        }
    };
}

<style>
.layout-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.header {
    background-color: #f5f5f5;
    border-bottom: 1px solid #ddd;
    padding: 20px;
}

.main-container {
    display: flex;
    flex: 1;
    overflow: hidden;
}

.sidebar {
    width: 250px;
    background-color: #f5f5f5;
    padding: 20px;
    border-right: 1px solid #ddd;
    overflow-y: auto;
}

.main-content {
    flex: 1;
    padding: 20px;
    overflow-y: auto;
}

.main-content.full-width {
    max-width: 100%;
}

.heading10 {
    margin: 0;
}

/* SfMenuの縦型表示用スタイル */
.sidebar .e-menu-wrapper {
    width: 100%;
}

.sidebar .e-menu {
    width: 100%;
}

.sidebar .e-menu-item {
    width: 100%;
}

</style>