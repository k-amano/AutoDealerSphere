@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@using AutoDealerSphere.Client.Shared

<div class="layout-container">
    <div class="header">
        <h1 class="heading10" data-en="AutoDealerSphere"><span>自動車販売管理システム</span></h1>
    </div>
    <div class="main-container">
        @if (!IsLoginPage())
        {
            <div class="sidebar">
                <nav class="custom-menu">
                    @foreach (var item in MenuItems)
                    {
                        if (item.Items != null && item.Items.Count > 0)
                        {
                            <!-- Parent menu item with children -->
                            <div class="menu-item-group">
                                <div class="menu-item parent" @onclick="() => ToggleSubmenu(item)">
                                    @if (!string.IsNullOrEmpty(item.IconCss))
                                    {
                                        <i class="@item.IconCss"></i>
                                    }
                                    <span>@item.Text</span>
                                    <i class="e-icons @(expandedMenus.Contains(item.Text) ? "e-chevron-down" : "e-chevron-right") expand-icon"></i>
                                </div>
                                @if (expandedMenus.Contains(item.Text))
                                {
                                    <div class="submenu">
                                        @foreach (var subItem in item.Items)
                                        {
                                            <a href="@subItem.Url" class="menu-item submenu-item">
                                                @if (!string.IsNullOrEmpty(subItem.IconCss))
                                                {
                                                    <i class="@subItem.IconCss"></i>
                                                }
                                                <span>@subItem.Text</span>
                                            </a>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <!-- Regular menu item -->
                            <a href="@item.Url" class="menu-item">
                                @if (!string.IsNullOrEmpty(item.IconCss))
                                {
                                    <i class="@item.IconCss"></i>
                                }
                                <span>@item.Text</span>
                            </a>
                        }
                    }
                </nav>
            </div>
        }
        <div class="main-content @(IsLoginPage() ? "full-width" : "")">
            @Body
        </div>
    </div>
</div>

@code {
    private HashSet<string> expandedMenus = new HashSet<string>();

    private bool IsLoginPage()
    {
        var uri = NavigationManager.Uri;
        return uri.EndsWith("/") || uri.EndsWith("/index");
    }

    private void ToggleSubmenu(AutoDealerSphere.Client.Shared.MenuItems item)
    {
        if (expandedMenus.Contains(item.Text))
        {
            expandedMenus.Remove(item.Text);
        }
        else
        {
            expandedMenus.Add(item.Text);
        }
    }

    private List<AutoDealerSphere.Client.Shared.MenuItems> MenuItems = new()
    {
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "顧客管理",
            Url = "/clientlist",
            IconCss = "e-icons e-people"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "車両管理",
            Url = "/vehiclelist",
            IconCss = "e-icons e-grid-view"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "データ管理",
            IconCss = "e-icons e-folder",
            Items = new List<AutoDealerSphere.Client.Shared.MenuItems>()
            {
                new AutoDealerSphere.Client.Shared.MenuItems()
                {
                    Text = "データインポート",
                    Url = "/vehicle-import",
                    IconCss = "e-icons e-arrow-up"
                },
                new AutoDealerSphere.Client.Shared.MenuItems()
                {
                    Text = "バックアップ",
                    Url = "/data-backup",
                    IconCss = "e-icons e-download"
                },
                new AutoDealerSphere.Client.Shared.MenuItems()
                {
                    Text = "レストア",
                    Url = "/data-restore",
                    IconCss = "e-icons e-upload"
                }
            }
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "部品管理",
            Url = "/partlist",
            IconCss = "e-icons e-settings"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "請求書管理",
            Url = "/invoicelist",
            IconCss = "e-icons e-file-document"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "ユーザー管理",
            Url = "/userlist",
            IconCss = "e-icons e-user"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "発行者情報管理",
            Url = "/issuerinfo",
            IconCss = "e-icons e-circle-info"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "メール設定",
            Url = "/email-settings",
            IconCss = "e-icons e-mail"
        },
        new AutoDealerSphere.Client.Shared.MenuItems()
        {
            Text = "ログアウト",
            Url = "/",
            IconCss = "e-icons e-close"
        }
    };
}

<style>
.layout-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.header {
    background-color: #f5f5f5;
    border-bottom: 1px solid #ddd;
    padding: 20px;
}

.main-container {
    display: flex;
    flex: 1;
    overflow: hidden;
}

.sidebar {
    width: 250px;
    background-color: #f5f5f5;
    padding: 20px;
    border-right: 1px solid #ddd;
    overflow-y: auto;
}

.main-content {
    flex: 1;
    padding: 20px;
    overflow-y: auto;
}

.main-content.full-width {
    max-width: 100%;
}

.heading10 {
    margin: 0;
}

/* Custom menu styles */
.custom-menu {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.menu-item-group {
    display: flex;
    flex-direction: column;
}

.menu-item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 16px;
    text-decoration: none;
    color: #333;
    border-radius: 4px;
    transition: background-color 0.2s;
    cursor: pointer;
    font-size: 14px;
}

.menu-item:hover {
    background-color: #e0e0e0;
}

.menu-item.parent {
    font-weight: 500;
    position: relative;
}

.menu-item i {
    font-size: 16px;
    width: 20px;
    text-align: center;
}

.menu-item .expand-icon {
    margin-left: auto;
    font-size: 14px;
}

.submenu {
    display: flex;
    flex-direction: column;
    gap: 2px;
    padding-left: 0;
    margin-top: 2px;
    margin-bottom: 2px;
}

.menu-item.submenu-item {
    padding: 10px 16px 10px 46px;
    font-size: 13px;
}

.menu-item.submenu-item:hover {
    background-color: #d5d5d5;
}

</style>