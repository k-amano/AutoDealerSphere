@page "/issuerinfo"
@using AutoDealerSphere.Client.Shared
@using Syncfusion.Blazor.Navigations

<SfBreadcrumb>
    <BreadcrumbItems>
        <BreadcrumbItem IconCss="e-icons e-home" Url="/" />
        <BreadcrumbItem Text="発行者情報管理" Url="/" />
    </BreadcrumbItems>
</SfBreadcrumb>

<h2>発行者情報管理</h2>

<IssuerInfoForm
    Item="@issuerInfo"
    OnClickOK="SaveIssuerInfo"
    EmailSettings="@emailSettings"
    Password="@password"
    TestEmailAddress="@testEmailAddress"
    EmailErrorMessage="@emailErrorMessage"
    EmailSuccessMessage="@emailSuccessMessage"
    IsEmailProcessing="@isEmailProcessing"
    OnSaveEmailSettings="SaveEmailSettings"
    OnTestConnection="TestConnection"
    OnSendTestEmail="SendTestEmail" />