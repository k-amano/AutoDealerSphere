@page "/data-restore"
@layout MainLayout
@using System.Net.Http.Headers
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Cards
@inject HttpClient Http
@inject NavigationManager Navigation

<SfBreadcrumb>
    <BreadcrumbItems>
        <BreadcrumbItem IconCss="e-icons e-home" Url="/" />
        <BreadcrumbItem Text="データ管理" />
        <BreadcrumbItem Text="レストア" Url="/data-restore" />
    </BreadcrumbItems>
</SfBreadcrumb>

<h2>データレストア</h2>
<h3>バックアップファイルからの復元</h3>

<div class="row">
    <div class="col-md-8">
        <SfCard>
            <CardHeader Title="ファイル選択" />
            <CardContent>
                <p>バックアップファイル（ZIP形式またはJSON形式）からデータを復元します。</p>

                <div class="alert alert-danger">
                    <span class="e-icons e-warning me-2"></span>
                    <strong>警告:</strong> レストアを実行すると、現在のデータは全て削除され、バックアップファイルのデータに置き換えられます。この操作は元に戻せません。
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">バックアップファイルを選択してください</label>
                    <InputFile OnChange="@OnFileSelected" accept=".json,.zip" class="form-control" />
                </div>

                @if (!string.IsNullOrEmpty(selectedFileName))
                {
                    <div class="alert alert-info d-flex align-items-center">
                        <span class="e-icons e-file me-2"></span>
                        <span>選択されたファイル: <strong>@selectedFileName</strong></span>
                    </div>
                }

                <div class="mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" @bind="confirmRestore" id="confirmRestoreCheck">
                        <label class="form-check-label" for="confirmRestoreCheck">
                            <strong class="text-danger">既存のデータを削除してレストアすることを理解しました</strong>
                        </label>
                    </div>
                </div>

                <br />

                <div style="text-align: center;">
                    <SfButton IsPrimary="true" IconCss="e-icons e-upload"
                             Disabled="@(isRestoring || selectedFile == null || !confirmRestore)"
                             OnClick="RestoreData">
                        @if (isRestoring)
                        {
                            <span>レストア中...</span>
                        }
                        else
                        {
                            <span>レストア開始</span>
                        }
                    </SfButton>
                    <SfButton CssClass="ms-2" OnClick="Cancel">キャンセル</SfButton>
                </div>
            </CardContent>
        </SfCard>

        @if (restoreResult != null)
        {
            <SfCard CssClass="mt-4">
                <CardHeader Title="レストア結果" />
                <CardContent>
                    <div class="@(restoreResult.Success ? "text-success" : "text-danger")">
                        <h5 class="mb-3">
                            <span class="e-icons @(restoreResult.Success ? "e-check" : "e-close") me-2"></span>
                            @restoreResult.Message
                        </h5>
                    </div>

                    @if (restoreResult.Success && restoreResult.Statistics != null)
                    {
                        <div class="row mb-3">
                            <div class="col-md-6 mb-2">
                                <div class="p-3 border rounded bg-light">
                                    <h6 class="text-primary">ユーザー</h6>
                                    <h3 class="mb-0">@restoreResult.Statistics.UsersCount 件</h3>
                                </div>
                            </div>
                            <div class="col-md-6 mb-2">
                                <div class="p-3 border rounded bg-light">
                                    <h6 class="text-success">顧客</h6>
                                    <h3 class="mb-0">@restoreResult.Statistics.ClientsCount 件</h3>
                                </div>
                            </div>
                            <div class="col-md-6 mb-2">
                                <div class="p-3 border rounded bg-light">
                                    <h6 class="text-info">車両</h6>
                                    <h3 class="mb-0">@restoreResult.Statistics.VehiclesCount 件</h3>
                                </div>
                            </div>
                            <div class="col-md-6 mb-2">
                                <div class="p-3 border rounded bg-light">
                                    <h6 class="text-warning">請求書</h6>
                                    <h3 class="mb-0">@restoreResult.Statistics.InvoicesCount 件</h3>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(restoreResult.Error))
                    {
                        <div class="alert alert-danger">
                            <h6 class="alert-heading">エラー:</h6>
                            <p class="mb-0">@restoreResult.Error</p>
                        </div>
                    }
                </CardContent>
            </SfCard>
        }
    </div>

    <div class="col-md-4">
        <SfCard>
            <CardHeader Title="レストアについて" />
            <CardContent>
                <p class="text-muted">レストアファイルには以下のテーブルのデータが必要です：</p>
                <ul class="list-unstyled">
                    <li><span class="e-icons e-check text-success me-2"></span>ユーザー情報</li>
                    <li><span class="e-icons e-check text-success me-2"></span>顧客情報</li>
                    <li><span class="e-icons e-check text-success me-2"></span>車両情報</li>
                    <li><span class="e-icons e-check text-success me-2"></span>車両カテゴリ</li>
                    <li><span class="e-icons e-check text-success me-2"></span>部品情報</li>
                    <li><span class="e-icons e-check text-success me-2"></span>法定費用</li>
                    <li><span class="e-icons e-check text-success me-2"></span>請求書</li>
                    <li><span class="e-icons e-check text-success me-2"></span>請求明細</li>
                    <li><span class="e-icons e-check text-success me-2"></span>発行者情報</li>
                </ul>
                <hr />
                <div class="alert alert-warning">
                    <small><strong>重要:</strong> レストア処理は元に戻せません。事前に現在のデータをバックアップすることを推奨します。</small>
                </div>
            </CardContent>
        </SfCard>
    </div>
</div>

@code {
    private IBrowserFile? selectedFile;
    private string selectedFileName = string.Empty;
    private bool isRestoring = false;
    private bool confirmRestore = false;
    private RestoreResult? restoreResult;

    private async Task OnFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        selectedFileName = e.File.Name;
        restoreResult = null;
        confirmRestore = false;
    }

    private async Task RestoreData()
    {
        if (selectedFile == null || !confirmRestore) return;

        isRestoring = true;
        restoreResult = null;

        try
        {
            var content = new MultipartFormDataContent();
            var fileContent = new StreamContent(selectedFile.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024)); // 50MB max

            // Set content type based on file extension
            if (selectedFile.Name.EndsWith(".zip", StringComparison.OrdinalIgnoreCase))
            {
                fileContent.Headers.ContentType = new MediaTypeHeaderValue("application/zip");
            }
            else
            {
                fileContent.Headers.ContentType = new MediaTypeHeaderValue("application/json");
            }

            content.Add(fileContent, "file", selectedFile.Name);

            var response = await Http.PostAsync("api/DataManagement/restore", content);

            if (response.IsSuccessStatusCode)
            {
                restoreResult = await response.Content.ReadFromJsonAsync<RestoreResult>();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                restoreResult = new RestoreResult
                {
                    Success = false,
                    Message = $"レストアに失敗しました: {response.StatusCode}",
                    Error = errorContent
                };
            }
        }
        catch (Exception ex)
        {
            restoreResult = new RestoreResult
            {
                Success = false,
                Message = "レストア中にエラーが発生しました",
                Error = ex.Message
            };
        }
        finally
        {
            isRestoring = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/");
    }

    private class RestoreResult
    {
        public bool Success { get; set; }
        public string Message { get; set; } = string.Empty;
        public RestoreStatistics? Statistics { get; set; }
        public string? Error { get; set; }
    }

    private class RestoreStatistics
    {
        public int UsersCount { get; set; }
        public int ClientsCount { get; set; }
        public int VehiclesCount { get; set; }
        public int PartsCount { get; set; }
        public int InvoicesCount { get; set; }
        public int VehicleCategoriesCount { get; set; }
        public int StatutoryFeesCount { get; set; }
        public int InvoiceDetailsCount { get; set; }
        public int IssuerInfosCount { get; set; }
    }
}
